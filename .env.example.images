# Configuraciones adicionales necesarias en .env

# Storage para imágenes
FILESYSTEM_DISK=public
FILESYSTEM_URL="${APP_URL}/storage"

# Límites de subida de archivos
UPLOAD_MAX_FILESIZE=10M
POST_MAX_SIZE=15M
MAX_FILE_UPLOADS=20

# Configuración de imágenes
IMAGE_CACHE_LIFETIME=2592000
IMAGE_THUMBNAIL_QUALITY=75
IMAGE_MAIN_QUALITY=85

# Directorio base para vehículos
VEHICULOS_STORAGE_PATH=vehiculos